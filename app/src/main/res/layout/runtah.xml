<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/vertical_activity"
    android:layout_height="wrap_content">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/img_item_photo"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_marginEnd="@dimen/vertical_activity"
    android:layout_marginRight="@dimen/horizontal_activity"
    tools:src="@android:color/holo_blue_light"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/img_item_photo"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_item_photo">
        <TextView
            android:id="@+id/tv_ireng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/hmj_name"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/desc"/>
    </LinearLayout>
</RelativeLayout>
